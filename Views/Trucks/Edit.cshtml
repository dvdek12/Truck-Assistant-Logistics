@model TruckAssistant.Models.Truck

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4 class="mt-4 mb-2">
    <b>@Model.Name</b>
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vmax" class="control-label"></label>
                <input asp-for="Vmax" class="form-control" />
                <span asp-validation-for="Vmax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverBreaksLength" class="control-label"></label>
                <input asp-for="DriverBreaksLength" class="form-control" />
                <span asp-validation-for="DriverBreaksLength" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DriverBreaksInterval" class="control-label"></label>
                <input asp-for="DriverBreaksInterval" class="form-control" />
                <span asp-validation-for="DriverBreaksInterval" class="text-danger"></span>
            </div>
            <div class="d-flex flex-row mt-4">
                <div class="form-group ">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>

                <button type="button" class="btn btn-dark ml-4">
                    <a class="text-light font-weight-bold text-decoration-none" asp-action="Index">Back to List</a>
                </button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
